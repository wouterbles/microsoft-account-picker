{
  "manifest_version": 3,
  "name": "Microsoft Account Auto-Picker",
  "version": "1.0",
  "description": "Automatically selects the correct Microsoft account based on the service you are accessing.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://login.microsoftonline.com/*"
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://login.microsoftonline.com/*"],
      "js": ["src/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
